#!/bin/bash

plugins=

function ensure_homeassistant() {
    if command -v hass >/dev/null 2>&1; then
        return 0
    fi

    local version_msg="(latest)"
    if [[ -n "${HA_VERSION:-}" ]]; then
        echo "Installing Home Assistant version ${HA_VERSION}"
        python -m pip install --no-cache-dir "homeassistant==${HA_VERSION}" || {
            echo "[warn] Failed to install requested Home Assistant version ${HA_VERSION}. Falling back to latest." >&2
            python -m pip install --no-cache-dir homeassistant
        }
        version_msg="(${HA_VERSION} requested)"
    elif [[ -f "/config/requirements.txt" ]]; then
        echo "Installing Home Assistant from /config/requirements.txt"
        python -m pip install --no-cache-dir -r /config/requirements.txt || {
            echo "[warn] Failed to install from /config/requirements.txt. Falling back to 'homeassistant' latest." >&2
            python -m pip install --no-cache-dir homeassistant
        }
        version_msg="(requirements.txt)"
    else
        echo "Installing Home Assistant (latest)"
        python -m pip install --no-cache-dir homeassistant
    fi

    echo "Home Assistant installation complete ${version_msg}";
}

function ensure_hass_config() {
    hass --script ensure_config -c /config
}

function create_hass_user() {
    local username=${HASS_USERNAME:-dev}
    local password=${HASS_PASSWORD:-dev}
    echo "Creating Home Assistant User ${username}:${password}"
    # Try to create the user, but don't fail if it already exists or if there's an error
    hass --script auth -c /config add ${username} ${password} || {
        echo "[warn] User creation failed or user already exists. This may be normal on first run." >&2
        return 0
    }
}

function bypass_onboarding() {
    cat > /config/.storage/onboarding << EOF
{
    "data": {
        "done": [
            "user",
            "core_config",
            "integration"
        ]
    },
    "key": "onboarding",
    "version": 3
}
EOF
}

function fetch_lovelace_plugins() {
    mkdir -p /config/www/workspace
    for plugin in $LOVELACE_PLUGINS
    do
        local author=$(cut -d '/' -f1 <<<"$plugin")
        local repo=$(cut -d '/' -f2 <<<"$plugin")
        local prefix=$(cut -d '-' -f1 <<<"$repo")
        local file

        if [[ $prefix == "lovelace" ]]; then
            file=$(cut -c 10- <<<"$repo")
        else
            file=$repo
        fi

        echo "Downloading ${plugin} to ${file}.js"
        curl https://raw.githubusercontent.com/${author}/${repo}/master/dist/${file}.js --output /config/www/${file}.js --fail \
        || curl https://raw.githubusercontent.com/${author}/${repo}/master/${file}.js --output /config/www/${file}.js --fail \
        || curl -L https://github.com/${author}/${repo}/releases/latest/download/${file}.js --output /config/www/${file}.js --fail \
        || curl -L https://github.com/${author}/${repo}/releases/latest/download/${file}-bundle.js --output /config/www/${file}.js --fail
        plugins="${plugins} /local/${file}.js"
    done
}

function install_lovelace_plugins() {

    for file in $LOVELACE_LOCAL_FILES
    do
        plugins="${plugins} /local/workspace/${file}"
    done

    fetch_lovelace_plugins

    cat > /config/.storage/lovelace_resources << EOF
{
    "data": {
        "items": [
EOF

    local i="0"
    for plugin in $plugins
    do
        if [ $i -gt "0" ]; then
            echo "," >> /config/.storage/lovelace_resources
        fi

        i=$((i+1))

        head -c -1 >> /config/.storage/lovelace_resources << EOF
            {
                "id": "${i}",
                "type": "module",
                "url": "${plugin}"
            }
EOF
    done

    cat >> /config/.storage/lovelace_resources << EOF

        ]
    },
    "key": "lovelace_resources",
    "version": 1
}
EOF
}

function install_hacs() {
    curl -sfSL https://get.hacs.xyz | bash -
}

function setup() {
    ensure_homeassistant
    ensure_hass_config
    bypass_onboarding
    create_hass_user
    install_hacs
    install_lovelace_plugins
}

function get_dev() {
    rm -rf /usr/src/homeassistant
    git clone --branch dev --single-branch --depth 1 https://github.com/home-assistant/core.git /usr/src/homeassistant
    pip install --upgrade -e /usr/src/homeassistant
}

function run() {
    hass -c /config -v
}

if [[ -f "$ENV_FILE" ]]; then
    source "$ENV_FILE"
fi

case $1 in
    setup-dev)
        get_dev
        setup
        ;;
    setup)
        setup
        ;;
    launch)
        run
        ;;
    run-dev)
        get_dev
        setup
        run
        ;;
    *)
        setup
        run
        ;;
esac
