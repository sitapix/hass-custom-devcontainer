{
  "name": "Home Assistant Custom Dev",
  "build": {
    "dockerfile": "../Dockerfile",
    "args": {
      "PYTHON_VERSION": "3.13"
    }
  },
  "remoteUser": "vscode",
  "updateContentCommand": "container setup || true",
  "postCreateCommand": "container setup || true",
  "postStartCommand": "(container launch >/tmp/ha-launch.log 2>&1 &) || true",
  "forwardPorts": [8123],
  "portsAttributes": {
    "8123": { "label": "Home Assistant" }
  },
  "mounts": [
    "source=${localWorkspaceFolder},target=/config/www/workspace,type=bind"
  ],
  "features": {},
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/home/vscode/.local/ha-venv/bin/python"
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        "EditorConfig.EditorConfig"
      ]
    }
  }
}
