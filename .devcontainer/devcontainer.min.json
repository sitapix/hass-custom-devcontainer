{
  "name": "HA Dev (Minimal)",
  "build": {
    "dockerfile": "../Dockerfile",
    "args": { "PYTHON_VERSION": "3.13" }
  },
  "remoteUser": "vscode",
  "forwardPorts": [8123],
  "postCreateCommand": "container setup || true",
  "postStartCommand": "(container launch >/tmp/ha-launch.log 2>&1 &) || true",
  "customizations": {
    "vscode": {
      "extensions": ["ms-python.python", "ms-python.vscode-pylance"],
      "settings": {
        "python.defaultInterpreterPath": "/home/vscode/.local/ha-venv/bin/python"
      }
    }
  }
}
